<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Source #<%= @source.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/sources" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_source/<%= @source.id %>" class="btn btn-block btn-outline-secondary">
          Delete source
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @source.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@source.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@source.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit source
    </h2>

    <form action="/modify_source/<%= @source.id %>"  method="post" >
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" class="form-control" value="<%= @source.name %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update source
      </button>
    </form>
  </div>
</div>

<hr>
