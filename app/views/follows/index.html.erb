<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all follows
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new follow
    </h2>

    <form action="/insert_follow" method="post">
      <div class="form-group">
        <label for="source_id_box">
          Source
        </label>

        <input type="text" id="source_id_box" name="query_source_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="follower_id_box">
          Follower
        </label>

        <input type="text" id="follower_id_box" name="query_follower_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create follow
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Source
        </th>

        <th>
          Follower
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @follows.each do |follow| %>
      <tr>
        <td>
          <%= follow.id %>
        </td>

        <td>
          <%= follow.source_id %>
        </td>

        <td>
          <%= follow.follower_id %>
        </td>

        <td>
          <%= time_ago_in_words(follow.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(follow.updated_at) %> ago
        </td>

        <td>
          <a href="/follows/<%= follow.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
