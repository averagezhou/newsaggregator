<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all bookmarks
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new bookmark
    </h2>

    <form action="/insert_bookmark" method="post">
      <div class="form-group">
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="article_id_box">
          Article
        </label>

        <input type="text" id="article_id_box" name="query_article_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="tag_box">
          Tag
        </label>

        <input type="text" id="tag_box" name="query_tag" class="form-control">
      </div>

      <div class="form-group">
        <label for="generate_box">
          Generate
        </label>

        <input type="text" id="generate_box" name="query_generate" class="form-control">
      </div>

      <div class="form-group">
        <label for="draft_box">
          Draft
        </label>

        <input type="text" id="draft_box" name="query_draft" class="form-control">
      </div>

      <div class="form-group">
        <label for="bookmark_box">
          Bookmark
        </label>

        <input type="text" id="bookmark_box" name="query_bookmark" class="form-control">
      </div>

      <div class="form-group">
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="article_id_box">
          Article
        </label>

        <input type="text" id="article_id_box" name="query_article_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="tag_box">
          Tag
        </label>

        <input type="text" id="tag_box" name="query_tag" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create bookmark
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Owner
        </th>

        <th>
          Article
        </th>

        <th>
          Tag
        </th>

        <th>
          Generate
        </th>

        <th>
          Draft
        </th>

        <th>
          Bookmark
        </th>

        <th>
          Owner
        </th>

        <th>
          Article
        </th>

        <th>
          Tag
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td>
          <%= bookmark.id %>
        </td>

        <td>
          <%= bookmark.owner_id %>
        </td>

        <td>
          <%= bookmark.article_id %>
        </td>

        <td>
          <%= bookmark.tag %>
        </td>

        <td>
          <%= bookmark.generate %>
        </td>

        <td>
          <%= bookmark.draft %>
        </td>

        <td>
          <%= bookmark.bookmark %>
        </td>

        <td>
          <%= bookmark.owner_id %>
        </td>

        <td>
          <%= bookmark.article_id %>
        </td>

        <td>
          <%= bookmark.tag %>
        </td>

        <td>
          <%= time_ago_in_words(bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarks/<%= bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
